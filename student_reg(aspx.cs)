using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;
using System.Configuration;
using System.Data;
using System.Data.SqlClient;


namespace result
{
    public partial class student_reg : System.Web.UI.Page
    {
        SqlConnection conn;
        SqlCommand cmd;
        SqlDataAdapter sda;
        protected void Page_Load(object sender, EventArgs e)
        {
            
            if (!Page.IsPostBack)
            {

            }
        }

        protected void fn_ConnectDB()
        {
            try
            {
                String str = ConfigurationManager.ConnectionStrings["myconn"].ConnectionString;
                conn = new SqlConnection(str);

                if (conn.State != ConnectionState.Open)
                {
                    conn.Open();
                }
            }
            catch (Exception ex)
            {
                Response.Write(ex.Message);
            }
        }



        protected void btn_reg_Click(object sender, EventArgs e)
        {
            try
            {
                fn_ConnectDB();
                string qry = "INSERT INTO student(stud_username,stud_email,stud_password,stud_enroll_date,stud_firstname,stud_lastname,stud_dob) VALUES(@stud_username,@stud_email,@stud_password,@stud_enroll_date,@stud_firstname,@stud_lastname,@stud_dob)";
                cmd = new SqlCommand(qry, conn);
                cmd.Parameters.AddWithValue("stud_username", txtname.Text);
              
                cmd.Parameters.AddWithValue("stud_email", txtemail.Text);
                cmd.Parameters.AddWithValue("stud_password", txtpass.Text);
                cmd.Parameters.AddWithValue("stud_enroll_date", calerd.SelectedDate);
                cmd.Parameters.AddWithValue("stud_firstname", txtfirstname.Text);
                cmd.Parameters.AddWithValue("stud_lastname", txtlastname.Text);
                cmd.Parameters.AddWithValue("stud_dob", caldob.SelectedDate);


                int res = cmd.ExecuteNonQuery();
                if (res > 0)
                {
                    lblMsg.Text = "Inserted successfully";
                }
                else
                {
                    lblMsg.Text = "Insert operation failed";
                }
            }
            catch (Exception ex)
            {
                Response.Write(ex.Message);
            }
        }
    }
}

        protected void fnbinddep()
        {
            try
            {
                ddldept.Items.Add("select department");
                ddldept.Items.Add("IT");
                ddldept.Items.Add("CS");
                ddldept.Items.Add("MB");
                ddldept.Items.Add("BT");
                ddldept.Items.Add("CHEM");
                ddldept.Items.Add("ES");

            }
            catch (Exception e)
            {
                Response.Write(e.ToString());

            }


        }


        protected void btn_reg_Click(object sender, EventArgs e)
        {
            try
            {
                fn_ConnectDB();
                string qry = "INSERT INTO faculty(faculty_username,faculty_password,faculty_email,faculty_firstname,faculty_lastname,faculty_dep) VALUES(@faculty_username,@faculty_password,@faculty_email,@faculty_firstname,@faculty_lastname,@faculty_dep)";
                cmd = new SqlCommand(qry, conn);
                cmd.Parameters.AddWithValue("faculty_username", txtname.Text);
                cmd.Parameters.AddWithValue("faculty_password", txtpass.Text);
                cmd.Parameters.AddWithValue("faculty_email", txtemail.Text);
                cmd.Parameters.AddWithValue("faculty_firstname", txtfirstname.Text);
                cmd.Parameters.AddWithValue("faculty_lastname", txtlastname.Text);
                cmd.Parameters.AddWithValue("faculty_dep", ddldept.SelectedValue);


                int res = cmd.ExecuteNonQuery();
                if (res > 0)
                {
                    lblMsg.Text = "Inserted successfully";
                }
                else
                {
                    lblMsg.Text = "Insert operation failed";
                }
            }
            catch (Exception ex)
            {
                Response.Write(ex.Message);
            }
        }
    }
}
